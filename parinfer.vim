let s:INDENT_MODE = 'INDENT_MODE'
let s:PAREN_MODE = 'PAREN_MODE'

let s:BACKSLASH = '\'
let s:BLANK_SPACE = ' '
let s:DOUBLE_SPACE = '  '
let s:DOUBLE_QUOTE = '"'
let s:NEWLINE = "\n"
let s:SEMICOLON = ';'
let s:TAB = "\t"

let s:PARENS = {
    '(': ')',
    '{': '}',
    '[': ']',
    ')': '(',
    '}': '{',
    ']': '[',
}

function! s:IsOpenParen(c)
    return c ==# '(' || c ==# '{' || c ==# '['
endfunction

function! s:IsCloseParen(c)
    return c ==# ')' || c ==# '}' || c ==# ']'
endfunction

